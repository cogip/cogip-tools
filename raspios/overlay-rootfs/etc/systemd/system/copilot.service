[Unit]
Description=COGIP Copilot

Wants=network.target
After=syslog.target network-online.target

[Service]
Type=simple
Restart=on-failure
User=root
WorkingDirectory=/tmp
ExecStart=/usr/bin/python3 -m cogip.tools.copilot
RestartSec=5
EnvironmentFile=/etc/default/copilot

[Install]
WantedBy=multi-user.target
